<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admission Form - School Management System</title>
    <link rel="stylesheet" href="css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body>
    <div class="admission-container">
      <div class="admission-card">
        <div class="admission-header">
          <div class="header-icon">
            <i class="fas fa-graduation-cap"></i>
          </div>
          <h1>Student Admission</h1>
          <p>Please fill out the form below to begin the admission process</p>
        </div>

        <form
          id="admissionForm"
          class="admission-form"
          action="/admission"
          method="post"
        >
          <div class="form-sections">
            <!-- Personal Information -->
            <section class="form-section">
              <div class="section-header">
                <i class="fas fa-user"></i>
                <h2>Personal Information</h2>
              </div>
              <div class="input-group">
                <div class="input-field">
                  <label for="firstName">First Name</label>
                  <input type="text" id="firstName" name="firstName" required />
                </div>
                <div class="input-field">
                  <label for="lastName">Last Name</label>
                  <input type="text" id="lastName" name="lastName" required />
                </div>
              </div>
              <div class="input-group">
                <div class="input-field">
                  <label for="dob">Date of Birth</label>
                  <input type="date" id="dob" name="dob" required />
                </div>
                <div class="input-field">
                  <label for="gender">Gender</label>
                  <select id="gender" name="gender" required>
                    <option value="">Select Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>
            </section>

            <!-- Contact Information -->
            <section class="form-section">
              <div class="section-header">
                <i class="fas fa-phone"></i>
                <h2>Contact Information</h2>
              </div>
              <div class="input-group">
                <div class="input-field">
                  <label for="email">Email Address</label>
                  <input type="email" id="email" name="email" required />
                </div>
                <div class="input-field">
                  <label for="phone">Phone Number</label>
                  <input type="tel" id="phone" name="phone" required />
                </div>
              </div>
              <div class="input-field full-width">
                <label for="address">Address</label>
                <textarea id="address" name="address" required></textarea>
              </div>
            </section>

            <!-- Academic Information -->
            <section class="form-section">
              <div class="section-header">
                <i class="fas fa-book"></i>
                <h2>Academic Information</h2>
              </div>
              <div class="input-group">
                <div class="input-field">
                  <label for="grade">Grade Applying For</label>
                  <select id="grade" name="grade" required>
                    <option value="">Select Class</option>
                    <option value="NC">NC</option>
                    <option value="LKG">LKG</option>
                    <option value="UKG">UKG</option>
                    <% for (let i = 1; i <= 11; i++) { %> 
                        <% if (i !== 10) { %>
                    <option value="<%= i %>">Class <%= i %></option>
                    <% } %> <% } %>
                  </select>
                </div>
                <div class="input-field">
                  <label for="previousSchool">Previous School</label>
                  <input
                    type="text"
                    id="previousSchool"
                    name="previousSchool"
                  />
                </div>
              </div>
            </section>

            <!-- Parent Information -->
            <section class="form-section">
              <div class="section-header">
                <i class="fas fa-users"></i>
                <h2>Parent Information</h2>
              </div>
              <div class="input-group">
                <div class="input-field">
                  <label for="parentName">Father's/Guardian Name</label>
                  <input
                    type="text"
                    id="parentName"
                    name="parentName"
                    required
                  />
                </div>
                <div class="input-field">
                  <label for="motherName">Mother's Name</label>
                  <input
                    type="text"
                    id="motherName"
                    name="motherName"
                    required
                  />
                </div>
                <div class="input-field">
                  <label for="parentPhone">Parent's Phone</label>
                  <input
                    type="tel"
                    id="parentPhone"
                    name="parentPhone"
                    required
                  />
                </div>
                 <div class="input-field">
                <label for="parentEmail">Parent's Email</label>
                <input type="email" id="parentEmail" name="parentEmail" />
              </div>
              </div>
             
            </section>

            <!-- Required Documents -->
            <section class="form-section documents">
              <div class="section-header">
                <i class="fas fa-file-alt"></i>
                <h2>Required Documents</h2>
              </div>
              <div class="documents-grid">
                <label class="document-item">
                  <input
                    type="checkbox"
                    name="documents"
                    value="clc"
                  />
                  <span class="checkmark"></span>
                  <span class="document-text">Character & Leaving Certificate</span>
                </label>
                <label class="document-item">
                  <input
                    type="checkbox"
                    name="documents"
                    value="previousReport"
                  />
                  <span class="checkmark"></span>
                  <span class="document-text">Previous Report</span>
                </label>
                <label class="document-item">
                  <input type="checkbox" name="documents" value="idProof" />
                  <span class="checkmark"></span>
                  <span class="document-text">ID Proof</span>
                </label>
              </div>
            </section>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn-submit">
              <i class="fas fa-paper-plane"></i>
              Submit Application
            </button>
            <button type="reset" class="btn-reset">
              <i class="fas fa-redo"></i>
              Reset Form
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
