<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - School Management System</title>
    <link rel="stylesheet" href="/css/admin.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="text-center mb-4">
        <h4 class="text-white">Admin Panel</h4>
      </div>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link active" href="/admin">
            <i class="bi bi-speedometer2"></i> Dashboard
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/admission">
            <i class="bi bi-person-plus"></i> Admissions
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/student">
            <i class="bi bi-mortarboard"></i> Students
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/teacher">
            <i class="bi bi-person-workspace"></i> Teachers
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/notice">
            <i class="bi bi-megaphone"></i> Notices
          </a>
        </li>
      </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Dashboard Section -->
      <div id="dashboard" class="section">
        <h2 class="mb-4">Dashboard</h2>

        <!-- Stats Row -->
        <div class="row mb-4">
          <div class="col-md-3">
            <div class="stat-card">
              <div class="icon text-primary">
                <i class="bi bi-mortarboard"></i>
              </div>
              <div class="stat-value">1,234</div>
              <div class="stat-label">Total Students</div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="stat-card">
              <div class="icon text-success">
                <i class="bi bi-person-workspace"></i>
              </div>
              <div class="stat-value">45</div>
              <div class="stat-label">Total Teachers</div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="stat-card">
              <div class="icon text-warning">
                <i class="bi bi-file-earmark-text"></i>
              </div>
              <div class="stat-value">12</div>
              <div class="stat-label">Pending Admissions</div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="stat-card">
              <div class="icon text-info">
                <i class="bi bi-calendar-event"></i>
              </div>
              <div class="stat-value">5</div>
              <div class="stat-label">Active Notices</div>
            </div>
          </div>
        </div>

        <!-- Notices Section -->
        <div class="row">
          <div class="col-md-6">
            <h3 class="mb-3">Recent Notices</h3>
            <div class="notice-card">
              <div class="notice-title">Annual Sports Day</div>
              <div class="notice-content">
                Annual sports day will be held on 15th March 2024.
              </div>
              <div class="notice-date">Posted on: 01/03/2024</div>
            </div>
            <div class="notice-card">
              <div class="notice-title">Parent-Teacher Meeting</div>
              <div class="notice-content">
                PTM scheduled for 20th March 2024.
              </div>
              <div class="notice-date">Posted on: 28/02/2024</div>
            </div>
          </div>
          <div class="col-md-6">
            <h3 class="mb-3">Pending Admissions</h3>
            <div class="data-table" style="max-height: 250px; overflow-y: auto;">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Class</th>
                    <th>Date</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% found.forEach(function (foundItem) { %>
                  <tr>
                    <td><%=foundItem.name %> <%= foundItem.lastname %></td>
                    <td><%=foundItem.grade %></td>
                    <td><%=foundItem.createdAt %></td>
                    <% if (foundItem.status === "Approved") { %>
                    <td>
                      <span class="badge bg-success"
                        ><%= foundItem.status %></span
                      >
                    </td>
                    <% } else if (foundItem.status === "Pending") { %>
                    <td>
                      <span class="badge bg-warning"
                        ><%= foundItem.status %></span
                      >
                    </td>
                    <% } else { %>
                    <td>
                      <span class="badge bg-danger"
                        ><%= foundItem.status %></span
                      >
                    </td>
                    <% } %>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
