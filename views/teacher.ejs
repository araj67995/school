<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teacher Dashboard - S.R Public School</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="dashboard-container">
      <!-- Top Stats -->
      <div class="stats-container">
        <div class="stat-card">
          <div class="stat-icon salary-icon">
            <i class="fas fa-money-bill-wave"></i>
          </div>
          <div class="stat-info">
            <h3>â‚¹<%=teacher.salary %></h3>
            <p>Monthly Salary</p>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon working-days-icon">
            <i class="fas fa-calendar-check"></i>
          </div>
          <div class="stat-info">
            <h3><%=present.length %></h3>
            <p>Total Working Days</p>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon absent-icon">
            <i class="fas fa-calendar-times"></i>
          </div>
          <div class="stat-info">
            <h3><%= absent.length %></h3>
            <p>Absent Days</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon leave-icon">
            <i class="fas fa-calendar-minus"></i>
          </div>
          <div class="stat-info">
            <h3><%= leave.length %></h3>
            <p>Leave</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon halfday-icon">
            <i class="fas fa-clock"></i>
          </div>
          <div class="stat-info">
            <h3><%= halfDay.length %></h3>
            <p>Half Days</p>
          </div>
        </div>
      </div>

      <div class="main-grid">
        <!-- Teacher Profile Sidebar -->
        <div class="profile-sidebar">
          <div class="profile-header">
            <h2><%=teacher.name %></h2>
            <p><%=teacher.subject %></p>
          </div>
          <div class="profile-details">
            <div class="detail-item">
              <i class="fas fa-id-card"></i>
              <p>
                <strong>Employee ID</strong>
                <%=teacher.teacherId %>
              </p>
            </div>
            <div class="detail-item">
              <i class="fas fa-calendar-alt"></i>
              <p>
                <strong>Joining Date</strong>
                J<%=teacher.joiningDate %>
              </p>
            </div>
            <div class="detail-item">
              <i class="fas fa-envelope"></i>
              <p>
                <strong>Email</strong>
                <%=teacher.email %>
              </p>
            </div>
            <div class="detail-item">
              <i class="fas fa-phone"></i>
              <p>
                <strong>Contact</strong>
                <%=teacher.contact %>
              </p>
            </div>
            <div class="detail-item">
              <i class="fas fa-graduation-cap"></i>
              <p>
                <strong>Experience</strong>
                <%=teacher.experience %> Year
              </p>
            </div>
          </div>
        </div>

        <!-- Main Content Area -->
        <div class="main-grid d-flex" style="flex-direction: column">
          <!-- Navigation Tabs at the Top -->
          <div class="content-header">
            <ul class="nav nav-tabs custom-tabs" id="mainTabs">
              <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#student">
                  <i class="fas fa-chalkboard-teacher"></i> Class Management
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#teacher">
                  <i class="fas fa-user-cog"></i> Self Services
                </a>
              </li>
            </ul>
          </div>

          <!-- Tab Content Below -->
          <div class="main-content">
            <div class="tab-content">
              <!-- Student/Class Management Tab -->
              <div class="tab-pane fade show active" id="student">
                <div class="content-card">
                  <!-- SELECT BARS ON ONE LINE -->
                  <div
                    class="filters-row d-flex gap-3 mb-4 align-items-center col-3"
                  >
                    <select
                      class="form-select"
                      id="classSelector"
                      onchange="loadStudents()"
                    >
                      <option value="">Select Class</option>
                      <% for(let i = 0; i < sections.length; i++ ){ %>
                      <option value="<%=teacher.grade %> <%= sections[i] %>">
                        Class <%=teacher.grade %><%= sections[i] %>
                      </option>
                      <% }; %>
                    </select>
                  </div>

                  <!-- DATA DISPLAYED FROM NEXT LINE -->
                  <div class="data-display">
                    <div
                      class="student-list"
                      id="studentList"
                      style="max-height: 250px; overflow-y: auto"
                    >
                      <!-- Student data will be populated here -->
                      <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Please select a class
                        to view students
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Teacher/Self Services Tab -->
              <div class="tab-pane fade" id="teacher">
                <div class="content-card">
                  <!-- Secondary Tabs: Attendance & Salary -->
                  <div class="d-flex gap-3 mb-4 align-items-center">
                    <ul class="nav nav-tabs custom-tabs w-100" id="teacherTabs">
                      <li class="nav-item">
                        <a
                          class="nav-link active"
                          data-bs-toggle="tab"
                          href="#attendance-record"
                        >
                          <i class="fas fa-calendar-user"></i>
                          <!-- New Icon: Calendar User -->
                          <span class="ms-1">Attendance</span>
                        </a>
                      </li>
                      <li class="nav-item">
                        <a
                          class="nav-link"
                          data-bs-toggle="tab"
                          href="#salary-record"
                        >
                          <i class="fas fa-money-bill-wave"></i>
                          <!-- Salary Icon -->
                          <span class="ms-1">Salary</span>
                        </a>
                      </li>
                    </ul>
                  </div>

                  <!-- DATA DISPLAYED -->
                  <div
                    class="tab-content bg-light px-4 py-3 rounded-bottom shadow-sm border"
                  >
                    <!-- Attendance Tab -->
                    <div
                      class="tab-pane fade show active"
                      id="attendance-record"
                    >
                      <div class="d-flex gap-3 mb-3 align-items-center">
                        <div class="col-3">
                          <div class="row g-2 mb-3">
                        <div class="col-auto">
                          <select id="monthSelect" class="form-select">
                            <% for (let m = 1; m <= 12; m++) { %>
                              <option value="<%= m %>" <%= selectedMonth === m ? 'selected' : '' %>><%= m %></option>
                            <% } %>
                          </select>
                        </div>
                        <div class="col-auto">
                          <select id="yearSelect" class="form-select">
                            <% for (let y = 2023; y <= new Date().getFullYear(); y++) { %>
                              <option value="<%= y %>" <%= selectedYear === y ? 'selected' : '' %>><%= y %></option>
                            <% } %>
                          </select>
                        </div>
                      </div>
                        </div>
                        <button
                          class="btn btn-outline-primary rounded-pill shadow-sm"
                          data-bs-toggle="modal"
                          data-bs-target="#leaveModal"
                        >
                          <i class="fas fa-calendar-plus"></i> Apply For Leave
                        </button>
                      </div>
                      <h5 class="fw-bold mb-1">
                        <i class="fas fa-calendar-check"></i> Attendance Records
                      </h5>
                      <p class="text-muted">
                        View your attendance history and monthly reports.
                      </p>
                      <div style="max-height: 250px; overflow-y: auto">
                      <div id="attendanceTableContainer">
                        <!-- Table will load here -->
                      </div>
                      </div>
                    </div>
                    <!-- Salary Tab -->
                    <div class="tab-pane fade" id="salary-record">
                      <h5 class="fw-bold mb-1">
                        <i class="fas fa-money-check-alt"></i> Salary
                        Information
                      </h5>
                      <p class="text-muted">
                        View your salary slips and payment records.
                      </p>
                      <div style="max-height: 250px; overflow-y: auto">
                        <table
                          class="table table-striped table-bordered align-middle"
                        >
                          <thead class="table-light">
                            <tr>
                              <th>Month</th>
                              <th>Year</th>
                              <th>Net Salary</th>
                              <th>Status</th>
                              <th>Payment Date</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% if (teacherSalaries && teacherSalaries.length >
                            0) { %> <% teacherSalaries.forEach(function(sal) {
                            %>
                            <tr>
                              <td><%= sal.month %></td>
                              <td><%= sal.year %></td>
                              <td>â‚¹<%= sal.netSalary %></td>
                              <td><%= sal.paymentStatus %></td>
                              <td><%= sal.paymentDate || '-' %></td>
                            </tr>
                            <% }); %> <% } else { %>
                            <tr>
                              <td colspan="5" class="text-center">
                                No salary records found.
                              </td>
                            </tr>
                            <% } %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- VIEW SECTION -->
    <div class="modal fade" id="viewSection" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Student Records</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>

          <div class="modal-body">
            <!-- Main Tabs: Attendance / Marksheet -->
            <ul class="nav nav-tabs" id="mainTabs">
              <li class="nav-item">
                <a
                  class="nav-link active"
                  data-bs-toggle="tab"
                  href="#attendance"
                  >Attendance</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#marksheet"
                  >Marksheet</a
                >
              </li>
            </ul>

            <div class="tab-content mt-3">
              <!-- Attendance Tab -->
              <div class="tab-pane fade show active" id="attendance">
                <div
                  class="d-flex justify-content-between align-items-center mb-2"
                >
                  <h5>Attendance Record</h5>
                  <button class="btn btn-primary" onclick="addAttendance()">
                    <i class="bi bi-plus-circle"></i> Add Attendance
                  </button>
                </div>
                <form action="/teacher/deleteAttendence" method="post">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>
                          <input type="checkbox" id="selectAllAttendence" />
                        </th>
                        <th>Month</th>
                        <th>Present</th>
                        <th>Absent</th>
                        <th>Attendance %</th>
                        <th>Remark</th>
                      </tr>
                    </thead>
                    <tbody id="attendenceTableBody"></tbody>
                  </table>
                  <input type="hidden" name="studentId" id="attendenceId" />
                  <button type="submit" class="btn btn-danger mt-2">
                    Delete Attendance
                  </button>
                </form>
              </div>

              <!-- Marksheet Tab -->
              <div class="tab-pane fade" id="marksheet">
                <div
                  class="d-flex justify-content-between align-items-center mb-2"
                >
                  <h5>Performance Record</h5>
                  <button class="btn btn-primary" onclick="addMarks()">
                    <i class="bi bi-plus-circle"></i> Add Marks
                  </button>
                </div>

                <!-- Inner Tabs: Term 1 / Term 2 -->
                <ul class="nav nav-tabs" id="termTabs">
                  <li class="nav-item">
                    <a
                      class="nav-link active"
                      data-bs-toggle="tab"
                      href="#term1"
                      >Term 1</a
                    >
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#term2"
                      >Term 2</a
                    >
                  </li>
                </ul>

                <div class="tab-content mt-3">
                  <!-- Term 1 Tab -->
                  <div class="tab-pane fade show active" id="term1">
                    <form
                      action="/teacher/deleteMarks"
                      method="post"
                      id="deleteFormTerm1"
                    >
                      <table class="table">
                        <thead>
                          <tr>
                            <th>
                              <input type="checkbox" id="selectAllMarks1" />
                            </th>
                            <th>Subject</th>
                            <th>Theory</th>
                            <th>Practical</th>
                            <th>Total</th>
                            <th>Grade</th>
                          </tr>
                        </thead>
                        <tbody id="term1Body"></tbody>
                      </table>
                      <button type="submit" class="btn btn-danger mt-2">
                        Delete Marks
                      </button>
                    </form>
                  </div>

                  <!-- Term 2 Tab -->
                  <div class="tab-pane fade" id="term2">
                    <form
                      action="/teacher/deleteMarks"
                      method="post"
                      id="deleteFormTerm2"
                    >
                      <table class="table">
                        <thead>
                          <tr>
                            <th>
                              <input type="checkbox" id="selectAllMarks2" />
                            </th>
                            <th>Subject</th>
                            <th>Theory</th>
                            <th>Practical</th>
                            <th>Total</th>
                            <th>Grade</th>
                          </tr>
                        </thead>
                        <tbody id="term2Body"></tbody>
                      </table>
                      <button type="submit" class="btn btn-danger mt-2">
                        Delete Marks
                      </button>
                    </form>
                  </div>
                </div>
              </div>
              <!-- End Marksheet -->
            </div>
            <!-- End tab-content -->
          </div>
          <!-- End modal-body -->
        </div>
      </div>
    </div>

    <!-- ADD MARKSHEET MODAL (Multiple Subjects Table) -->
    <div class="modal fade" id="addMarksheet" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <form id="marksheetForm" action="/teacher/addMarksheet" method="post">
            <div class="modal-header">
              <h5 class="modal-title">Add Marksheet</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">
              <!-- Term Selector -->
              <div class="mb-3">
                <label class="form-label">Select Term</label>
                <select class="form-select" name="term" required>
                  <option value="">Select Term</option>
                  <option value="term1">Term 1</option>
                  <option value="term2">Term 2</option>
                </select>
              </div>
              <input type="hidden" id="id-marksheet" value="" name="id" />
              <input type="hidden" id="name-marksheet" value="" name="name" />
              <input
                type="hidden"
                id="rollNo-marksheet"
                value=""
                name="rollno"
              />
              <input
                type="hidden"
                id="grade-marksheet"
                value=""
                name="studentGrade"
              />
              <input
                type="hidden"
                id="father-marksheet"
                value=""
                name="father"
              />
              <input
                type="hidden"
                id="section-marksheet"
                value=""
                name="section"
              />
              <!-- Subjects Table -->
              <div class="mb-3">
                <label class="form-label">Subjects & Marks</label>
                <table class="table w-100" id="subjectsTable">
                  <thead>
                    <tr>
                      <th style="width: 22%">Subject</th>
                      <th style="width: 15%">Theory</th>
                      <th style="width: 15%">Practical</th>
                      <th style="width: 15%">Total</th>
                      <th style="width: 15%">Grade</th>
                      <th style="width: 8%"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>
                        <select
                          class="form-select subject-select"
                          name="subject[]"
                          required
                          onchange="checkDuplicateSubject(this)"
                        >
                          <option value="">Select Subject</option>
                          <option>Math</option>
                          <option>Science</option>
                          <option>English</option>
                          <option>Hindi</option>
                          <option>S.St</option>
                        </select>
                      </td>
                      <td>
                        <input
                          type="number"
                          class="form-control theory-input"
                          name="theory[]"
                          required
                          oninput="autoFillTotalAndGrade(this)"
                        />
                      </td>
                      <td>
                        <input
                          type="number"
                          class="form-control practical-input"
                          name="practical[]"
                          required
                          oninput="autoFillTotalAndGrade(this)"
                        />
                      </td>
                      <td>
                        <input
                          type="number"
                          class="form-control total-input"
                          name="total[]"
                          required
                          readonly
                        />
                      </td>
                      <td>
                        <input
                          type="text"
                          class="form-control grade-input"
                          name="grade[]"
                          required
                          readonly
                        />
                      </td>
                      <td>
                        <button
                          type="button"
                          class="btn btn-danger btn-sm"
                          onclick="removeSubjectRow(this)"
                        >
                          <i class="bi bi-x"></i>
                        </button>
                      </td>
                    </tr>
                  </tbody>
                </table>
                <button
                  type="button"
                  class="btn btn-secondary btn-sm"
                  onclick="addSubjectRow()"
                >
                  <i class="bi bi-plus"></i> Add Subject
                </button>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Save</button>
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Cancel
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- ADD ATTENDANCE MODAL -->
    <div class="modal fade" id="addAttendance" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <form
            id="attendanceForm"
            action="/teacher/addAttendence"
            method="post"
          >
            <div class="modal-header">
              <h5 class="modal-title">Add Attendance</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label">Month</label>
                <input
                  type="month"
                  class="form-control"
                  name="month"
                  required
                />
                <input type="hidden" id="id-attendance" name="id" value="" />
              </div>
              <div class="mb-3">
                <label class="form-label">Days Present</label>
                <input
                  type="number"
                  class="form-control"
                  id="present"
                  name="present"
                  oninput="calculatePercentage()"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Days Absent</label>
                <input
                  type="number"
                  class="form-control"
                  id="absent"
                  name="absent"
                  oninput="calculatePercentage()"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Attendance %</label>
                <input
                  type="text"
                  class="form-control"
                  id="percentage"
                  name="percentage"
                  required
                  readonly
                />
              </div>
              <div class="info-item mb-3">
                <label class="form-label">Remark</label>
                <textarea
                  class="form-control"
                  name="remark"
                  rows="3"
                  placeholder="Optional..."
                ></textarea>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Save</button>
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Cancel
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Leave Application Modal -->
    <div class="modal fade" id="leaveModal" tabindex="-1">
      <div class="modal-dialog">
        <form id="leaveForm" action="/teacher/applyLeave" method="post">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Apply for Leave</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label">From Date</label>
                <input
                  type="date"
                  class="form-control"
                  name="fromDate"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">To Date</label>
                <input
                  type="date"
                  class="form-control"
                  name="toDate"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Reason</label>
                <textarea
                  class="form-control"
                  name="reason"
                  rows="2"
                  required
                ></textarea>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Cancel
              </button>
              <button type="submit" class="btn btn-primary">Apply</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <script>
      const Students = <%- JSON.stringify(students) %>;
      const Marks = <%- JSON.stringify(marks) %>;
      const Attendances = <%- JSON.stringify(attendances) %>;
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/teacher.js"></script>

    <script>
  const teacherId = "<%= teacher.teacherId %>";

  document.getElementById("monthSelect").addEventListener("change", fetchAttendance);
  document.getElementById("yearSelect").addEventListener("change", fetchAttendance);

  function fetchAttendance() {
    const month = document.getElementById("monthSelect").value;
    const year = document.getElementById("yearSelect").value;

    fetch(`/teacher/api/${teacherId}/attendance?month=${month}&year=${year}`)
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          renderAttendanceTable(data.daily, data.year, data.month);
        } else {
          alert("Failed to load attendance.");
        }
      });
  }

  function renderAttendanceTable(dailyData, year, month) {
    const daysInMonth = new Date(year, month, 0).getDate();
    let html = `
      <table class="table table-bordered">
        <thead><tr>
          <th>Date</th>
          <th>Status</th>
          <th>Remark</th>
        </tr></thead>
        <tbody>`;

    for (let day = 1; day <= daysInMonth; day++) {
      const d = String(day).padStart(2, '0');
      const dateStr = `${year}-${String(month).padStart(2, '0')}-${d}`;
      const entry = dailyData[dateStr];

      html += `<tr>
        <td>${dateStr}</td>
        <td>${entry ? formatStatus(entry.status) : '<span class="badge bg-secondary">Not Marked</span>'}</td>
        <td>${entry?.remark || '-'}</td>
      </tr>`;
    }

    html += "</tbody></table>";
    document.getElementById("attendanceTableContainer").innerHTML = html;
  }

  function formatStatus(status) {
    switch (status) {
      case "Present":
        return '<span class="badge bg-success">Present</span>';
      case "Absent":
        return '<span class="badge bg-danger">Absent</span>';
      case "Half Day":
        return '<span class="badge bg-warning text-dark">Half Day</span>';
      case "Leave":
        return '<span class="badge bg-info">Leave</span>';
      default:
        return status;
    }
  }

  // Initial load
  fetchAttendance();
</script>

  </body>
</html>
